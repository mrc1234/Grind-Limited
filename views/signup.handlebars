<div class="container">
  <div class="top-con row">
    <div class="col-8 offset-2">
      <form id="signup-form">
        <h2>Sign Up</h2>
        <h6>Please fill in this form to create an account.</h6>
        <hr>
        <label for="name">Name</label>
        <input type="text" placeholder="Enter Full name" name="name" required="required" id="full-name">
        <label for="company_name">Company</label>
        <input type="text" placeholder="Enter Your Company's Name" name="company-name" required="required" id="company-name">
        <label for="email">Email</label>
        <input type="text" placeholder="Enter Email" name="email" required="required" id="email">

        <label for="psw">Password</label>
        <input type="password" placeholder="Enter Password" name="psw" required="required" id="password">
        <div class="clearfix">
          <button type="button" class="cancelbtn">Cancel</button>
          <button type="submit" class="signupbtn">Sign Up</button>
        </div>
      </form>
      <div class="alert alert-success">
        <div class="container">
          <div class="alert-icon">
            <i class="material-icons">check</i>
          </div>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="material-icons">clear</i></span>
          </button>
          <b>Success Alert:</b> Sign up was successfull click <a href="#" data-toggle="modal" data-target="#loginModal"><span
              class="badge badge-pill badge-info">HERE</span></a> to login
        </div>
      </div>
    </div>
  </div>
